//init tags
$('#tags').empty();
<% @phrase.tags.each do |tag| %>
  $('#tags').prepend('<%= j(render tag) %>');
<% end %>

//init edit form
$('#abc_phrase_title')    .val('<%= j((@phrase.title).html_safe)     %>');
$('#abc_phrase_meter')    .val('<%= j((@phrase.meter).html_safe)     %>');
$('#abc_phrase_length')   .val('<%= j((@phrase.length).html_safe)    %>');
$('#abc_phrase_reference').val('<%= j((@phrase.reference).html_safe) %>');
$('#abc_phrase_key')      .val('<%= j((@phrase.key).html_safe)       %>');
$('#abc_phrase_abc')     .text('<%= j((@phrase.abc).html_safe)       %>');

//change post url of edit form
$('#new_abc_phrase').attr('action', '/abc_phrases/' + <%= @phrase.id %>);

updateAbcArea();
bindEvent();
